<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investors</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            color: #333;
        }
        form {
            margin: 20px 0;
        }
        form input, form button {
            padding: 8px;
            margin-right: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        form button {
            background-color: #007BFF;
            color: white;
            border: none;
        }
        form button:hover {
            background-color: #0056b3;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        .actions form {
            display: inline;
        }
        a {
            text-decoration: none;
            color: #007BFF;
        }
        a:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Investors</h1>

    <!-- Notifications for Success/Error -->
    <% if (success) { %>
        <p style="color: green;"><%= success %></p>
    <% } %>
    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>

    <!-- Add Investor Form -->
    <form action="/investors" method="POST">
        <label for="firstname">First Name:</label>
        <input type="text" id="firstname" name="firstname" placeholder="First Name" required>
        <label for="lastname">Last Name:</label>
        <input type="text" id="lastname" name="lastname" placeholder="Last Name" required>
        <button type="submit">Add Investor</button>
    </form>

    <!-- Investors List -->
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% investors.forEach(investor => { %>
                <tr>
                    <td><%= investor.id %></td>
                    <td><%= investor.firstname %></td>
                    <td><%= investor.lastname %></td>
                    <td class="actions">
                        <!-- Delete Button -->
                        <form action="/investors/<%= investor.id %>/delete" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/">Back to Home</a>
</body>
</html>

