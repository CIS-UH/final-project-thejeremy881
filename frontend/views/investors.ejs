<!DOCTYPE html>
<html>
<head>
    <title>Investors</title>
    <link rel="stylesheet" href="/css/investors.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"> <!-- Link to modern font -->
</head>
<body>
    <main>
        <!-- Back to Home Button -->
        <div class="back-button-container">
            <button onclick="window.location.href='/'">Back to Home</button>
        </div>

        <header>
            <h1>Investors</h1>
        </header>

        <!-- Add New Investor Form -->
        <form action="/investors" method="POST">
            <label for="firstname">First Name:</label>
            <input type="text" id="firstname" name="firstname" placeholder="First Name">
            <label for="lastname">Last Name:</label>
            <input type="text" id="lastname" name="lastname" placeholder="Last Name">
            <button type="submit">Add Investor</button>
        </form>

        <!-- Investors Table -->
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% investors.forEach((investor, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= investor.firstname %></td>
                        <td><%= investor.lastname %></td>
                        <td>
                            <form action="/investors/<%= investor.id %>/delete" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>





