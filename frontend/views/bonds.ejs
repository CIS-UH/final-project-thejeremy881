<!DOCTYPE html>
<html>
<head>
    <title>Bonds</title>
    <link rel="stylesheet" href="/css/bonds.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <main>
        <!-- Back to Home Button -->
        <div class="back-button-container">
            <button onclick="window.location.href='/'">Back to Home</button>
        </div>

        <header>
            <h1>Bonds Management</h1>
        </header>

        <!-- Add New Bond Form -->
        <form action="/bonds" method="POST">
            <label for="bondname">Bond Name:</label>
            <input type="text" id="bondname" name="bondname" placeholder="Bond Name" required>
            <label for="abbreviation">Abbreviation:</label>
            <input type="text" id="abbreviation" name="abbreviation" placeholder="Abbreviation" required>
            <label for="currentprice">Current Price:</label>
            <input type="number" id="currentprice" name="currentprice" placeholder="Current Price" required>
            <button type="submit">Add Bond</button>
        </form>

        <!-- Bonds Table -->
        <table>
            <thead>
                <tr>
                    <th>Bond Name</th>
                    <th>Abbreviation</th>
                    <th>Current Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% bonds.forEach(bond => { %>
                    <tr>
                        <td><%= bond.bondname %></td>
                        <td><%= bond.abbreviation %></td>
                        <td>$<%= bond.currentprice %></td>
                        <td>
                            <form action="/bonds/<%= bond.id %>/edit" method="GET" style="display: inline;">
                                <button type="submit">Edit</button>
                            </form>
                            <form action="/bonds/<%= bond.id %>/delete" method="POST" style="display: inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>





