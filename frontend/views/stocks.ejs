<!DOCTYPE html>
<html>
<head>
    <title>Stocks</title>
    <link rel="stylesheet" href="/css/stocks.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <main>
        <!-- Back to Home Button -->
        <div class="back-button-container">
            <button onclick="window.location.href='/'">Back to Home</button>
        </div>

        <header>
            <h1>Stocks</h1>
        </header>

        <!-- Add New Stock Form -->
        <form action="/stocks" method="POST">
            <label for="stockname">Stock Name:</label>
            <input type="text" id="stockname" name="stockname" placeholder="Stock Name" required>
        
            <label for="abbreviation">Abbreviation:</label>
            <input type="text" id="abbreviation" name="abbreviation" placeholder="Abbreviation" required>
        
            <label for="price">Current Price:</label>
            <input type="number" id="price" name="currentprice" placeholder="Current Price" required>
        
            <button type="submit">Add Stock</button>
        </form>
        

        <!-- Stocks List -->
        <table>
            <thead>
                <tr>
                    <th>Stock Name</th>
                    <th>Abbreviation</th>
                    <th>Current Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% stocks.forEach(stock => { %>
                    <tr>
                        <td><%= stock.stockname %></td>
                        <td><%= stock.abbreviation %></td>
                        <td>$<%= stock.currentprice %></td>
                        <td>
                            <form action="/stocks/<%= stock.id %>/delete" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>

